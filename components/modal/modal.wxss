/* components/modal.wxss */
.modal {
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .5);
}

.modalContent {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.textModal {
  padding: 10px 20px;
  background-color: #fff;
  border-radius: 5px;
  min-height: 200px;
  width: 60%;
}

.close-icon {
  margin-top: 15px;
  width: 30px;
  height: 30px;
}

.picModal {
  display: flex;
  justify-content: center;
}

.adImg {
  max-width: 80%;
}