.flex,
.flex-column,
.flex-center-between,
.flex-center-xy,
.page {
  display: flex;
}
.flex-center,
.flex-center-between,
.flex-center-xy,
.page {
  justify-content: center;
}
.flex-between,
.flex-center-between {
  justify-content: space-between;
}
.flex-middle,
.flex-center-xy,
.page {
  align-items: center;
}
.flex-column {
  flex-direction: column;
}
.page {
  margin-top: -100px;
  min-height: 100vh;
  width: 100%;
}
.mb10 {
  margin-bottom: 10px;
}
.mb15 {
  margin-bottom: 15px;
}
.mb20 {
  margin-bottom: 20px;
}
.bold {
  font-weight: bold;
}
.font14 {
  font-size: 14px;
}
.font18 {
  font-size: 18px;
}
.font20 {
  font-size: 20px;
}
.normal-btn {
  width: 150px;
  height: 42px;
  line-height: 42px;
  background: #0366d6;
  text-align: center;
  color: #fff;
  border-radius: 5px;
}
.box {
  border-radius: 4px;
  background: #fff;
  padding: 15px 12px;
  width: 100%;
  box-sizing: border-box;
}
.gray {
  color: #999;
}

.black {
  color: #323232;
}